<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="timmon.verkehrzaehlung.MainActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinner"
        android:entries="@array/array_Richtung"/>

    <Button
        android:text="PKW"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/bPKW"
        android:layout_alignParentStart="true"

        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinner"
        android:textSize="50dp"/>

    <TextView
        android:text="Anzahl PKW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPKW"
        android:layout_below="@+id/bPKW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"/>

    <Button
        android:text="LKW"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/bLKW"
        android:layout_above="@+id/txtLKW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"/>

    <TextView
        android:text="Anzahl LKW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLKW"
        android:layout_marginBottom="23dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="26dp"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bSave"
        android:layout_below="@+id/bLKW"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Speicherort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tSaveOrt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
